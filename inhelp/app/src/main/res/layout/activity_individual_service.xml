<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FEFF"
    tools:context=".service.IndividualServiceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/button_back_to_services_recycler_view"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_arrow_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_service_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:text="Name"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_item_service_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_back_to_services_recycler_view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_view_item_service_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:text="Category"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/image_view_service_item_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view_service_item_image"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_name" />

        <TextView
            android:id="@+id/text_view_service_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_service_item_image" />

        <TextView
            android:id="@+id/text_view_service_item_description_replaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textMultiLine"
            android:text="No description"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_description" />

        <TextView
            android:id="@+id/text_view_service_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Price:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_description_replaced" />

        <TextView
            android:id="@+id/text_view_service_item_price_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="25dp"
            android:text="Free"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_service_item_periodic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toEndOf="@+id/text_view_service_item_price"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_description_replaced" />

        <TextView
            android:id="@+id/text_view_service_item_periodic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="If it is periodic or not"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_price" />

        <TextView
            android:id="@+id/text_view_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="By:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_periodic" />

        <TextView
            android:id="@+id/text_view_service_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toEndOf="@+id/text_view_by"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_periodic"
            app:layout_constraintVertical_bias="0.12" />

        <TextView
            android:id="@+id/text_view_service_item_city"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="City:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_by" />

        <TextView
            android:id="@+id/text_view_service_item_city_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="city"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toEndOf="@+id/text_view_service_item_city"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_username" />

        <TextView
            android:id="@+id/text_view_precise_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawablePadding="5dp"
            android:text="Enter location:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_precise_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_service_item_city_replace" />

        <EditText
            android:id="@+id/edit_text_precise_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg_blue"
            android:padding="15dp"
            android:textColor="#000000"
            android:hint=""
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_precise_location" />

        <RatingBar
            android:id="@+id/rating_bar_service_item_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stepSize="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_precise_location" />

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#304FFE"
            android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="ADD TO CART"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_bar_service_item_replace"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button_service_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#304FFE"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Submit Review!"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/button_add_to_cart"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_bar_service_item_replace" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
